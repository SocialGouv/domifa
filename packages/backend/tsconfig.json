{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "strict": true,
    "lib": ["es2018.promise"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
