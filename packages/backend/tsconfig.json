{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    // "strict": true,
    // "noImplicitAny": true,
    "lib": [
      "es2018.promise"
    ],
    "module": "commonjs",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "target": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
