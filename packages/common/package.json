{
  "name": "@domifa/common",
  "version": "1.0.1",
  "private": true,
  "license": "AGPL-3.0-only",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "tsc --watch",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "eslint --cache ./src",
    "lint:fix": "eslint --cache ./src --fix",
    "license:add": "license-check-and-add add -f license.config.json -r $(date +%Y)",
    "license:check": "license-check-and-add check -f license.config.json -r $(date +%Y)",
    "license:remove": "license-check-and-add remove -f license.config.json -r $(date +%Y)",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/create-config": "^0.4.1",
    "@types/jest": "^29.4.0",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.23.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.4.3",
    "license-check-and-add": "^4.0.5",
    "lint-staged": "^14.0.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "rimraf": "^5.0.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown -w",
    "*.ts": "eslint --cache --fix"
  }
}
