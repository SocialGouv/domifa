engine-strict=true

# Supply-chain hardening
minimumReleaseAge=4320
minimumReleaseAgeExclude[]=@types/*

trustPolicy=no-downgrade

# Do not run dependency lifecycle scripts by default.
# We will explicitly allow specific packages later via onlyBuiltDependencies[]=...
# Allow node-talisman (security scanner) to run its install scripts
onlyBuiltDependencies[]=node-talisman

preferFrozenLockfile=true

packageManagerStrict=true
packageManagerStrictVersion=false
